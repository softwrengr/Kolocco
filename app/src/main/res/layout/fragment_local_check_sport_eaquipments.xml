<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/toolbarTitle"
                    style="@style/toolbar_main_title"
                    android:includeFontPadding="false"
                    android:text="@string/toolbar_new_equipments"
                    app:fontFamily="@font/aquatico_regular" />


            </LinearLayout>


            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_7"
                android:src="@drawable/back_arrow" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="@string/skip"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:visibility="gone"
                app:fontFamily="@font/opensans_regular" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        style="@style/dashboard_main_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/visitor_dashboard_details_text_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/check_sport_equipments_please_inform_the_visitor"
                    android:textSize="@dimen/sp_11"
                    app:fontFamily="@font/opensans_regular" />

                <ImageView
                    android:id="@+id/imageViewChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:src="@drawable/order_histo_chat" />

            </LinearLayout>

            <View style="@style/bottom_line" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/drawable_round_corner_small_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayoutSelectAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/customTextServiceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:clickable="false"
                                android:padding="@dimen/dp_5"
                                android:textColor="@color/buttonColor"
                                android:textSize="@dimen/sp_12"
                                app:fontFamily="@font/opensans_regular"
                                tools:text="Snowboarding" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/customTextCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:clickable="false"
                                android:text="@string/check_sport_equipments_selected"
                                android:textColor="@color/greyText"
                                android:textSize="@dimen/sp_10"
                                android:visibility="gone"
                                app:fontFamily="@font/opensans_regular" />

                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/checkBoxSelectAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:button="@drawable/selector_check_equipments"
                            android:clickable="false"
                            android:padding="@dimen/dp_5"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@color/greyLine" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.kooloco.util.FirstCapEditText
                            android:id="@+id/editTextEquipmentName"
                            style="@style/upload_certificate_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:hint="@string/add_sport_equipment"
                            android:inputType="text|textCapSentences"
                            android:lines="1"
                            android:padding="@dimen/dp_10"
                            app:background="@drawable/bottom_line_new" />

                        <View style="@style/upload_certificate" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/buttonAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="end|center"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/drawable_button_shadow"
                        android:text="@string/add_equipment"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9"
                        app:fontFamily="@font/opensans_regular" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dp_3"
                    android:background="@color/greyLine" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerSportType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/row_new_check_equipments" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/button_next">


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonSubmit"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/button_done" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
