<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customTextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/selector_choose_sport_activities"
            android:drawablePadding="@dimen/dp_10"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="Session"
            android:textColor="@color/greyText"
            android:textSize="@dimen/sp_9"
            android:layout_marginEnd="@dimen/dp_9"
            app:fontFamily="@font/opensans_regular" />

        <ImageView
            android:id="@+id/imageViewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/sport_activity_group_booking"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextValueNoExpand"
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_select_date_time_background"
            android:hint="$00"
            android:lines="1"
            android:padding="@dimen/dp_3"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@drawable/selector_select_date_time_text"
            android:textSize="@dimen/sp_9" />

    </LinearLayout>


    <View style="@style/bottom_line_s_m" />

</LinearLayout>