<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewService"
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_67"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/sport_activity_session" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/customTextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:text="Session"
        android:textAlignment="center"
        android:textColor="@drawable/selector_text"
        android:textSize="@dimen/sp_10"
        app:fontFamily="@font/opensans_regular_title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/customTextViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="6"
        android:padding="@dimen/dp_3"
        android:text="Share a session"
        android:textAlignment="center"
        android:textColor="@color/greyText"
        android:textSize="@dimen/sp_9"
        app:fontFamily="@font/opensans_regular" />

    <ImageView
        android:id="@+id/imageViewSelection"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_marginStart="@dimen/dp_6"
        android:background="@drawable/drawable_dashboard_select_service_line" />

</LinearLayout>