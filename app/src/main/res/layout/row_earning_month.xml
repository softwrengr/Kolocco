<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/drawable_round_corner_small_white_no_elevation"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_8"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_gravity="start"
                android:paddingBottom="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:src="@drawable/user_round" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:includeFontPadding="false"
                android:text="12"
                android:textColor="@color/greyText"
                android:textSize="@dimen/sp_12"
                app:fontFamily="@font/opensans_regular_title" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:clickable="false"
                android:includeFontPadding="false"
                android:text="June"
                android:textColor="@color/greyText"
                android:textSize="@dimen/sp_9"
                app:fontFamily="@font/opensans_regular_title" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/customTextViewName"
                    style="@style/visitor_dashboard_review_text_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="Kathleen Anderson"
                    android:textColor="@color/buttonColor"
                    app:fontFamily="@font/opensans_regular_title" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/customTextViewOrderStatus"
                    style="@style/order_history_text_new"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="@dimen/dp_1"
                    android:includeFontPadding="false"
                    android:text="@string/order_history_escrow"
                    android:textColor="@color/yellow"
                    android:visibility="gone"
                    app:fontFamily="@font/opensans_regular_title" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/customTextViewServiceType"
                        style="@style/visitor_dashboard_review_text_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        app:fontFamily="@font/opensans_regular_title"
                        tools:text="Kathleen Anderson " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatRatingBar
                            android:id="@+id/ratingBar"
                            style="@style/Base.Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_3"
                            android:layout_marginEnd="@dimen/dp_3"
                            android:layout_marginTop="@dimen/dp_3"
                            android:progress="4"
                            android:rating="4.5"
                            android:theme="@style/RatingBar" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewReviewCount"
                            style="@style/order_history_text_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:textColor="@color/greyText"
                            app:fontFamily="@font/opensans_regular"
                            tools:text="(5)" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/customTextViewAddress"
                        style="@style/order_history_text_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/greyText"
                        app:fontFamily="@font/opensans_regular"
                        tools:text="Ahmedabad, India" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/customTextCompleted"
                        style="@style/home_icon_title"
                        android:layout_gravity="start"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_3"
                        android:drawableLeft="@drawable/complete_order_icon"
                        android:gravity="start"
                        android:includeFontPadding="false"
                        android:text="@string/completed"
                        android:textColor="@color/green"
                        android:textSize="@dimen/sp_11"
                        app:fontFamily="@font/opensans_regular" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/customTextCancelled"
                        style="@style/home_icon_title"
                        android:layout_gravity="start"
                        android:layout_marginEnd="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_3"
                        android:gravity="start"
                        android:includeFontPadding="false"
                        android:text="@string/order_status_cancelled"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_11"
                        android:visibility="gone"
                        app:fontFamily="@font/opensans_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewExp"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="end"
                        android:src="@drawable/lesson_new" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewCurrencyType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="@dimen/dp_3"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="@color/greyText"
                            android:textSize="@dimen/sp_9"
                            app:fontFamily="@font/opensans_regular_title"
                            tools:text="@string/usd" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/customTextViewPrice"
                            style="@style/order_history_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginEnd="0dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/buttonColor"
                            android:textSize="@dimen/sp_11"
                            app:fontFamily="@font/opensans_regular_title"
                            tools:text="25.25" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>