<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutNoExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkBoxNoExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:button="@null"
                android:drawableLeft="@drawable/selector_checkbox" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewSelectValueNoExpand"
                style="@style/choose_language_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/dp_5"
                android:text="2 Selected"
                android:textSize="@dimen/sp_8"
                android:visibility="invisible"
                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/drawable_edit_text"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/customEditTextNameNoExpand"
                    style="@style/become_a_local"
                    android:layout_width="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@null"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Surfing"
                    android:padding="@dimen/dp_12"
                    app:fontFamily="@font/opensans_regular"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/imageViewSelectNoExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/sport_activity_group_booking"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextValueNoExpand"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_select_date_time_background"
                        android:hint="$00"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:padding="@dimen/dp_5"
                        android:singleLine="true"
                        android:textAlignment="center"
                        android:textColor="@drawable/selector_select_date_time_text"
                        android:textSize="@dimen/sp_11" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/select_language"
                android:layout_height="0dp"
                android:visibility="visible">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_9"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkboxExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:button="@null"
                android:drawableLeft="@drawable/selector_checkbox" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewExpand"
                style="@style/choose_language_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/dp_2"
                android:text="0 Selected"
                android:textSize="@dimen/sp_8"
                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutExpandNewMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_edit_text"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/customEditTextNameExpand"
                    style="@style/become_a_local"
                    android:layout_width="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@null"
                    android:hint="Skiing"
                    android:padding="@dimen/dp_12"
                    app:fontFamily="@font/opensans_regular"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/imageViewSelectExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:src="@drawable/sport_activity_group_booking"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/linearLayoutExpandNew"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/customTextViewSelectExpand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/selector_select_activity" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutLocalSpeakLanguage"
                style="@style/select_language"
                android:visibility="visible">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerExpand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_10"
                    tools:listitem="@layout/row_local_check_sport_activities" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>