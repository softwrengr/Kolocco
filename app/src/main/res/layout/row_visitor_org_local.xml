<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:clickable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:background="@drawable/user_round"
            android:clickable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_weight="1"
                android:clickable="false"
                android:text="Angela Clore"
                android:textColor="@color/buttonColor"
                android:textSize="@dimen/sp_11"
                app:fontFamily="@font/opensans_regular" />

            <LinearLayout
                android:id="@+id/linearLayoutAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_1"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_3"
                    android:clickable="false"
                    android:text="@string/org_req"
                    android:textColor="@color/greyText"
                    android:textSize="@dimen/sp_9"
                    android:visibility="visible"
                    app:fontFamily="@font/opensans_regular" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/customTextViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:text="@string/notification_accept_new"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_9"
                    android:visibility="visible"
                    app:fontFamily="@font/opensans_regular" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_7"
                    android:layout_marginStart="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/greyLine" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_3"
                    android:clickable="false"
                    android:text="@string/payment_rule"
                    android:textColor="@color/greyText"
                    android:textSize="@dimen/sp_9"
                    android:visibility="visible"
                    app:fontFamily="@font/opensans_regular" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/customTextViewAssign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:text="@string/assign"
                    android:textColor="@color/green"
                    android:textSize="@dimen/sp_9"
                    android:visibility="visible"
                    app:fontFamily="@font/opensans_regular" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View style="@style/bottom_line_s_m" />

</LinearLayout>
