<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/dashboard_main_space"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/price_rul_text"
                        android:includeFontPadding="false"
                        android:text="@string/u2022_set_price_per_hour"
                        app:fontFamily="@font/opensans_regular_title" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextValuePrice"
                        style="@style/price_rul_edittext"
                        android:hint="$00"
                        android:inputType="numberDecimal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/price_rul_text"
                        android:includeFontPadding="false"
                        android:text="@string/u2022_minimum_duration_new"
                        app:fontFamily="@font/opensans_regular_title" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextValueDuration"
                        style="@style/price_rul_edittext"
                        android:hint="3 hr"
                        android:inputType="number"
                        android:text="3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/sport_activity_group_booking" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:padding="@dimen/dp_5"
                        android:text="@string/group_booking"
                        android:textColor="@color/greyText"
                        android:textSize="@dimen/sp_11"
                        app:fontFamily="@font/opensans_regular_title" />

                    <CheckBox
                        android:id="@+id/checkBoxSelectRules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_settings"
                        android:gravity="center"
                        android:padding="@dimen/dp_10" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/price_rul_text"
                        android:layout_gravity="top"
                        android:layout_weight="0"
                        android:includeFontPadding="false"
                        android:paddingEnd="0dp"
                        android:text="\u2022 "
                        app:fontFamily="@font/opensans_regular_title" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/price_rul_text"
                        android:includeFontPadding="false"
                        android:text="@string/u_2022_set_pricing_rule_for_the_activity_cost_per_hour_for_every_new_participant_new"
                        app:fontFamily="@font/opensans_regular_title" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextValuePer"
                        style="@style/price_rul_edittext"
                        android:background="@drawable/selector_select_date_time_background"
                        android:hint="$00"
                        android:text=""
                        android:inputType="numberDecimal"
                        android:textColor="@drawable/selector_select_date_time_text"
                        android:textColorHint="@drawable/selector_select_date_time_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/price_rul_text"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:text="@string/u2022_add_maximum_number_of_participants"
                        app:fontFamily="@font/opensans_regular_title" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextValuePart"
                        style="@style/price_rul_edittext"
                        android:background="@drawable/selector_select_date_time_background"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="@drawable/selector_select_date_time_text"
                        android:textColorHint="@drawable/selector_select_date_time_text" />

                </LinearLayout>


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewExpLab"
                    style="@style/price_rul_text"
                    android:layout_gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/sport_for"
                    android:textColor="@color/black"
                    app:fontFamily="@font/opensans_regular" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@color/greyLine" />

                <com.nex3z.flowlayout.FlowLayout
                    android:id="@+id/flowLayoutSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />


                <android.support.v7.widget.AppCompatTextView
                    style="@style/price_rul_text"
                    android:layout_gravity="start"
                    android:includeFontPadding="false"
                    android:text="@string/example_n"
                    android:textColor="@color/black"
                    app:fontFamily="@font/opensans_regular_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/greyLine" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/price_rul_text"
                    android:layout_gravity="start"
                    android:text="Calculation"
                    android:textColor="@color/buttonColor"
                    android:textSize="@dimen/sp_10"
                    app:fontFamily="@font/opensans_regular" />

                <!--Receipt section start -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/appointment_summery_duration"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/customTextViewRecDuration"
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="1:00 hr"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>

                </LinearLayout>

                <!--Receipt duration section end -->


                <!--Receipt price section start -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/appointment_summery_price"
                            app:fontFamily="@font/opensans_regular_title" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/customTextViewRecPriceNote"
                            style="@style/receipt_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(1:00h at $20.00)"
                            android:textColor="@color/greyText"
                            android:textSize="@dimen/sp_9"
                            app:fontFamily="@font/opensans_regular" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/customTextViewRecPrice"
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="$ 20.00"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>

                </LinearLayout>

                <!--Receipt price section end -->

                <!--Receipt additional participants section start -->

                <LinearLayout
                    android:id="@+id/linearLayoutAdditionalParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/appointment_summery_additional_participants"
                            app:fontFamily="@font/opensans_regular_title" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/customTextViewRecAddParNote"
                            style="@style/receipt_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(1:00h at $10.00 for 1)"
                            android:textColor="@color/greyText"
                            android:textSize="@dimen/sp_9"
                            app:fontFamily="@font/opensans_regular" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/customTextViewRecAddPartPrice"
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="$ 10.00"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>

                </LinearLayout>


                <!--Receipt additional participants section end -->

                <!--Receipt total activity section start -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/appointment_summery_total_activity"
                            android:textColor="@color/buttonColor"
                            app:fontFamily="@font/opensans_regular" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/customTextViewRecTotalAct"
                            style="@style/receipt_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 30.00"
                            android:textColor="@color/buttonColor"
                            app:fontFamily="@font/opensans_regular" />

                    </LinearLayout>

                </LinearLayout>

                <!--Receipt total activity section section end -->



                <!--Receipt section end -->


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/greyLine" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>