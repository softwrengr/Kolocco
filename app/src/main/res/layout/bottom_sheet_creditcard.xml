<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    android:id="@+id/linearLayoutBottomSheet"
    app:behavior_peekHeight="0dp"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/dashboard_main_space"

        android:layout_marginTop="@dimen/dp_7"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextCardHolderName1"
            style="@style/login"
            android:hint="Card Holders Name"
            android:inputType="textPersonName"
            app:fontFamily="@font/opensans_regular" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextCardNumber1"
            style="@style/login"
            android:hint="@string/hint_card_number"
            android:inputType="number"
            android:maxLength="16"
            app:fontFamily="@font/opensans_regular" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextExpiryDate1"
            style="@style/login"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Expiry Date"
            android:inputType="number"
            android:maxLength="6"
            app:fontFamily="@font/opensans_regular" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/editTextCardCvv1"
            style="@style/login"
            android:hint="@string/card_cvv"
            android:inputType="number"
            android:maxLength="3"
            app:fontFamily="@font/opensans_regular" />

        <LinearLayout style="@style/button_next">


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonAdd1"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/button_add" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />
    </LinearLayout>

</LinearLayout>