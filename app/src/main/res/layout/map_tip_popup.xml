<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/map_popup"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_7">

        <ImageView
            android:id="@+id/imageViewSerivce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_83"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flowLayoutImgProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_white_circ">

                        <ImageView
                            android:id="@+id/imageViewProfile"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_2"
                            android:src="@drawable/user_round" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/ratingView"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/drawable_white_circul"
                        android:clickable="false"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_7"
                                android:layout_height="@dimen/dp_7"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:src="@drawable/home_star" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/customTextViewRatingValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:includeFontPadding="false"
                                android:paddingTop="@dimen/dp_1"
                                android:text="0"
                                android:textColor="@color/yellow"
                                android:textSize="@dimen/sp_6"
                                app:fontFamily="@font/opensans_regular_title" />
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/customTextViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/flowLayoutImgProfile"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginEnd="@dimen/dp_7"
                    android:layout_marginStart="@dimen/dp_3"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Test"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    app:fontFamily="@font/opensans_regular_title" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progress="4"
                    android:rating="4.5"
                    android:theme="@style/RatingBar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_3"
                        android:src="@drawable/map_pin_home" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/customTextViewAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_2"
                        android:layout_marginEnd="@dimen/dp_7"
                        android:layout_marginStart="@dimen/dp_4"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=" test demo"
                        android:textColor="@color/greyText"
                        android:textSize="@dimen/sp_8"
                        app:fontFamily="@font/opensans_regular_title" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_3"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_5">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewLowestValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/dp_3"
                            android:layout_marginTop="@dimen/dp_6"
                            android:clickable="false"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:paddingTop="@dimen/dp_2"
                            android:text="$00/hr"
                            android:textColor="@color/buttonColor"
                            android:textSize="@dimen/sp_13"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewSession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:paddingTop="@dimen/dp_2"
                            android:text="Session : "

                            android:textColor="@color/greyText"
                            android:textSize="@dimen/sp_8"
                            app:fontFamily="@font/opensans_regular" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewSessionValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:includeFontPadding="false"
                            android:paddingTop="@dimen/dp_2"
                            android:text="$00/hr"
                            android:textColor="@color/buttonColor"
                            android:textSize="@dimen/sp_8"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewLesson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:paddingTop="@dimen/dp_2"
                            android:text="Lesson : "
                            android:textColor="@color/greyText"
                            android:textSize="@dimen/sp_8"
                            app:fontFamily="@font/opensans_regular" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewLessonValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:includeFontPadding="false"
                            android:paddingTop="@dimen/dp_2"
                            android:text="$00/hr"
                            android:textColor="@color/buttonColor"
                            android:textSize="@dimen/sp_8"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewDiscovery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:paddingTop="@dimen/dp_2"
                            android:text="Discovery : "
                            android:textColor="@color/greyText"
                            android:textSize="@dimen/sp_8"
                            app:fontFamily="@font/opensans_regular" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/textViewDiscoveryValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:includeFontPadding="false"
                            android:paddingTop="@dimen/dp_2"
                            android:text="$00/hr"
                            android:textColor="@color/buttonColor"
                            android:textSize="@dimen/sp_8"
                            app:fontFamily="@font/opensans_regular_title" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_9" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        tools:listitem="@layout/row_local_map" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_185"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20" />

    </LinearLayout>


</LinearLayout>