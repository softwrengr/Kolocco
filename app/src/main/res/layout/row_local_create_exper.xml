<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageViewService"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/sport_activity_session" />

            <ImageView
                android:id="@+id/imageViewSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_14"
                android:src="@drawable/sport_activity_setp_complete" />
        </FrameLayout>


    </FrameLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/customTextViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Session"
        android:textColor="@color/black"

        android:textSize="@dimen/sp_11"
        app:fontFamily="@font/opensans_regular_title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/customTextViewDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="12"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/dp_3"
        android:text="Share a session "
        android:textColor="@color/greyText"
        android:textSize="@dimen/sp_9"
        app:fontFamily="@font/opensans_regular" />

</LinearLayout>