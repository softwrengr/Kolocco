<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customTextTitle"
            style="@style/notification_main_title"
            android:includeFontPadding="false"
            android:text="Local name has notify on meet location for your appointment"
            app:fontFamily="@font/opensans_regular_title" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customTextViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginStart="@dimen/dp_5"
            android:clickable="false"
            android:padding="@dimen/dp_5"
            android:text="Now"
            android:textColor="@color/buttonColor"
            android:textSize="@dimen/sp_8"
            app:fontFamily="@font/opensans_regular" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/customTextSubTitle"
        style="@style/notification_main_title"
        android:text="Cum valebat persuadere, omnes compateres .."
        android:textColor="@color/greyText"
        android:textSize="@dimen/sp_10"
        app:fontFamily="@font/opensans_regular" />

    <LinearLayout
        android:id="@+id/linearLayoutFullContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextChat"
                style="@style/notification_icon_title"
                android:drawableTop="@drawable/notification_chat"
                android:text="@string/notification_chat"
                android:textColor="@color/yellow"
                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextNotify"
                style="@style/notification_icon_title"
                android:drawableTop="@drawable/notification_notify"
                android:text="@string/notification_notify"
                android:textColor="@color/buttonColor"
                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextAccept"
                style="@style/notification_icon_title"
                android:drawableTop="@drawable/notification_accept"
                android:text="@string/notification_accept"
                android:textColor="@color/notificationLightGreen"

                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextDecline"
                style="@style/notification_icon_title"
                android:drawableTop="@drawable/notification_decline"
                android:text="@string/notification_decline"
                android:textColor="@color/red"
                app:fontFamily="@font/opensans_regular" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutObjection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextObjAccept"
                style="@style/notification_icon_title"
                android:clickable="true"
                android:drawableTop="@drawable/notification_accept"
                android:text="@string/notification_accept"
                android:textColor="@color/notificationLightGreen"
                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_65"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextRequestToAdmin"
                style="@style/notification_icon_title"
                android:clickable="true"
                android:drawableTop="@drawable/notification_req_to_admin"
                android:text="@string/notification_request_admin"
                android:textColor="@color/buttonColor"
                app:fontFamily="@font/opensans_regular" />
        </LinearLayout>


    </LinearLayout>


    <View style="@style/bottom_line" />

</LinearLayout>