<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginStart="@dimen/dp_15"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customTextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/selector_choose_sport_activities_new"
            android:drawablePadding="@dimen/dp_10"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text=""
            android:textColor="@drawable/selector_select_date_time_text"
            android:textSize="@dimen/sp_9"
            app:fontFamily="@font/opensans_regular" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customTextViewNameNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="Session"
            android:textColor="@drawable/selector_select_date_time_text"
            android:textSize="@dimen/sp_11"
            app:fontFamily="@font/opensans_regular" />

        <ImageView
            android:id="@+id/imageViewClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_7"
            android:src="@drawable/preview_organization_remove_icon" />

    </LinearLayout>


    <View style="@style/bottom_line_s_m" />

</LinearLayout>