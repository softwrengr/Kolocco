<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutExpRoot"
    android:layout_width="match_parent"
    android:background="@drawable/drawable_round_corner_white"
    android:clickable="false"
    android:foreground="@drawable/ripple_animation"
    android:gravity="center"
    android:layout_marginBottom="@dimen/dp_3"
    android:layout_marginEnd="@dimen/dp_1"
    android:layout_marginStart="@dimen/dp_1"
    android:layout_marginTop="@dimen/dp_3"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_3"
        android:layout_marginVertical="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:padding="@dimen/dp_3"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10"
                app:fontFamily="@font/opensans_regular_title"
                tools:text="From 08:00 am to 09:00 am" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_3">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewCurrencyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="3"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingEnd="@dimen/dp_3"
                    android:text="@string/usd"
                    android:textColor="@color/greyText"
                    android:textSize="@dimen/sp_10"
                    app:fontFamily="@font/opensans_regular_title" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="3"
                    android:textColor="@color/buttonColor"
                    android:textSize="@dimen/sp_13"
                    app:fontFamily="@font/opensans_regular_title"
                    tools:text="20.20" />

            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonSelect"
            style="@style/button"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:text="@string/button_select" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonUnSelect"
            style="@style/button"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:background="@drawable/drawable_button_shadow_gray"
            android:clickable="false"
            android:text="@string/button_full"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

