<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_2"
    android:layout_marginTop="@dimen/dp_2"
    android:background="@drawable/drawable_round_corner_small_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_20"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_14"
        android:clickable="false"
        android:src="@drawable/payment_mestro" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/greyLine" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/customTextViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:text="XXXX XXXX 1234"
        android:textColor="@color/greyText"
        android:textSize="@dimen/sp_11"
        app:fontFamily="@font/opensans_regular_title" />

    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dp_2"
        android:clickable="false"
        android:padding="@dimen/dp_9"
        android:src="@drawable/org_delete" />

</LinearLayout>