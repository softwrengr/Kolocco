<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/dashboard_main_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_15"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:scaleType="centerInside"
                android:src="@drawable/booking_confirmation_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewNoData"
                    style="@style/appointment_booked_new"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/your_made_it"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_11"
                    app:fontFamily="@font/opensans_regular" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/appointment_booked_new"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_3"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="@string/enjoy_your_experience"
                    android:textColor="@color/greyText"
                    app:fontFamily="@font/opensans_regular" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10" />

            <LinearLayout style="@style/button_next">


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/buttonOkGreat"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/button_ok_great_new" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewBookAnotherDay"
                    style="@style/appointment_booked"
                    android:layout_gravity="start"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_7"
                    android:drawableRight="@drawable/appoinment_booked_right_arrow"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingEnd="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_3"
                    android:text="@string/appointment_booked_book_another_day"
                    android:textColor="@color/buttonColor"
                    android:textSize="@dimen/sp_11"
                    app:fontFamily="@font/opensans_regular_title" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/appointment_booked"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/icon_correct"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|start"
                    android:text="@string/appointment_booked_your_experience"
                    app:fontFamily="@font/opensans_regular" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/appointment_booked"
                    android:layout_weight="1"

                    android:drawableEnd="@drawable/icon_correct"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|start"
                    android:text="@string/appointment_booked_secure_your_payment"
                    app:fontFamily="@font/opensans_regular" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/appointment_booked"
                    android:layout_weight="1"

                    android:drawableEnd="@drawable/icon_close"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|start"
                    android:text="@string/appointment_booked_complete_your_activity"
                    app:fontFamily="@font/opensans_regular" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/appointment_booked"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/icon_close"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|start"
                    android:text="@string/appointment_booked_release_the_payment"
                    app:fontFamily="@font/opensans_regular" />

            </LinearLayout>


        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/radioButton"
                style="@style/appointment_booked_r"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                style="@style/appointment_booked_view"
                app:layout_constraintEnd_toEndOf="@+id/radioButton"
                app:layout_constraintStart_toStartOf="@+id/radioButton"
                app:layout_constraintTop_toBottomOf="@+id/radioButton" />


            <RadioButton
                android:id="@+id/radioButton1"
                style="@style/appointment_booked_r"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <View
                android:id="@+id/view1"
                style="@style/appointment_booked_view"
                app:layout_constraintEnd_toEndOf="@+id/radioButton1"
                app:layout_constraintStart_toStartOf="@+id/radioButton1"
                app:layout_constraintTop_toBottomOf="@+id/radioButton1" />

            <RadioButton
                android:id="@+id/radioButton2"
                style="@style/appointment_booked_r"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view1" />

            <View
                android:id="@+id/view2"
                style="@style/appointment_booked_view"
                app:layout_constraintEnd_toEndOf="@+id/radioButton2"
                app:layout_constraintStart_toStartOf="@+id/radioButton2"
                app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

            <RadioButton
                android:id="@+id/radioButton3"
                style="@style/appointment_booked_r"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />


            <android.support.v7.widget.AppCompatTextView
                style="@style/appointment_booked"
                android:text="@string/appointment_booked_in_escrow_account"
                app:fontFamily="@font/opensans_regular"
                app:layout_constraintBottom_toBottomOf="@+id/radioButton1"
                app:layout_constraintStart_toEndOf="@+id/radioButton1"
                app:layout_constraintTop_toTopOf="@+id/radioButton1" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/appointment_booked"
                android:text="@string/appointment_booked_complete_your_service"
                app:fontFamily="@font/opensans_regular"
                app:layout_constraintBottom_toBottomOf="@+id/radioButton2"
                app:layout_constraintStart_toEndOf="@+id/radioButton2"
                app:layout_constraintTop_toTopOf="@+id/radioButton2" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/appointment_booked"
                android:text="@string/appointment_booked_free_the_amount"
                app:fontFamily="@font/opensans_regular"
                app:layout_constraintBottom_toBottomOf="@+id/radioButton3"
                app:layout_constraintStart_toEndOf="@+id/radioButton3"
                app:layout_constraintTop_toTopOf="@+id/radioButton3" />

        </android.support.constraint.ConstraintLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
