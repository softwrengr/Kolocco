<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewExpAddFieldTitle"
        style="@style/visitor_dashboard_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_3"
        android:layout_marginVertical="@dimen/dp_5"
        android:includeFontPadding="false"
        app:fontFamily="@font/opensans_regular_title"
        tools:text="Name Of the new fields" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewExpAddFieldsDesc"
        style="@style/visitor_dashboard_details_text_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_3"
        app:fontFamily="@font/opensans_regular"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas non lacinia velit. Suspendisse potenti. Donec at arcu venenatis, commodo tortor. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas non lacinia velit. Suspendisse potenti. Donec at arcu venenatis, commodo tortor. " />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/exp_row_visitor_and_local_details_extra_fields_images" />

    <View
        style="@style/bottom_line"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_3" />

</LinearLayout>
