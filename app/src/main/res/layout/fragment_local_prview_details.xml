<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/toolbarTitle"
                style="@style/toolbar_main_title"
                android:includeFontPadding="false"
                android:text="@string/toolbar_preview_details"
                app:fontFamily="@font/aquatico_regular" />

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_7"
                android:src="@drawable/back_arrow" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/dashboard_main_space"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15">

            <FrameLayout
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/drawable_white_circul">

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_round" />

            </FrameLayout>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="Biking in the BORO"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                app:fontFamily="@font/opensans_regular_title" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/visitor_orgnization_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/organization_details_activity_types"
                android:includeFontPadding="false"

                app:fontFamily="@font/opensans_regular_title" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewActivityTypes"
                style="@style/visitor_orgnization_details_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discoveries"
                app:fontFamily="@font/opensans_regular" />

            <View style="@style/bottom_line" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/visitor_orgnization_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/organization_details_sport_types"
                android:includeFontPadding="false"

                app:fontFamily="@font/opensans_regular_title" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewSportTypes"
                style="@style/visitor_orgnization_details_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skiing : Freeride,Freestyle"
                app:fontFamily="@font/opensans_regular" />

            <View style="@style/bottom_line" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/visitor_orgnization_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website_url"
                android:includeFontPadding="false"
                app:fontFamily="@font/opensans_regular_title" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/customTextViewWebSite"
                style="@style/visitor_orgnization_details_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.bikinginntheboro.com"
                app:fontFamily="@font/opensans_regular" />

            <View style="@style/bottom_line" />


            <android.support.v7.widget.AppCompatTextView
                style="@style/visitor_orgnization_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/organization_details_location"
                android:includeFontPadding="false"

                app:fontFamily="@font/opensans_regular_title" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@id/customTextViewLocation"
                style="@style/visitor_orgnization_details_text_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3668 Hood Avenue San Diego, CA 92103"
                app:fontFamily="@font/opensans_regular" />

            <View style="@style/bottom_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/visitor_orgnization_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/organization_details_locals"
                    android:includeFontPadding="false"
                    app:fontFamily="@font/opensans_regular_title" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textViewLocalValue"
                    style="@style/visitor_orgnization_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_3"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="(2)"
                    android:includeFontPadding="false"
                    android:textColor="@color/greyText"
                    android:textSize="@dimen/sp_10"
                    app:fontFamily="@font/opensans_regular_title" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_local_create_organization_local_delete" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/visitor_orgnization_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/organization_details_images"
                android:includeFontPadding="false"

                app:fontFamily="@font/opensans_regular_title" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_visitor_organization_detail_org_images" />

            <View style="@style/bottom_line" />

            <LinearLayout
                android:id="@+id/linearLayoutStep1"
                style="@style/dashboard_main_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/button_next"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/buttonChange"
                        style="@style/button"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/button_change" />

                </LinearLayout>

                <LinearLayout
                    style="@style/button_next"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/buttonConfirm"
                        style="@style/button"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/button_confirm" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

