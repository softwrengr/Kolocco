<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:clickable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:background="@drawable/user_round"
            android:clickable="false"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customTextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:clickable="false"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12"
            app:fontFamily="@font/opensans_regular" />

        <CheckBox
            android:id="@+id/checkBoxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@null"
            android:clickable="true"
            android:drawableEnd="@drawable/selector_duration"
            android:padding="@dimen/dp_10" />

        <FrameLayout
            android:id="@+id/frameLayoutClose"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewCancel"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_9"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:background="@drawable/close_new"
                android:padding="@dimen/dp_10"
                android:scaleType="centerInside"
                android:visibility="visible" />

        </FrameLayout>


    </LinearLayout>

    <View style="@style/bottom_line_s_m" />

</LinearLayout>
