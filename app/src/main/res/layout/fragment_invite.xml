<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/toolbarTitle"
                    style="@style/toolbar_main_title"
                    android:includeFontPadding="false"
                    android:text="@string/profile_invite_friends"
                    app:fontFamily="@font/aquatico_regular" />


            </LinearLayout>


            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_7"
                android:src="@drawable/back_arrow" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/invite_friend"
        android:gravity="center"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220" />


        <android.support.v7.widget.AppCompatTextView
            style="@style/appointment_booked"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/inv_freinds"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:paddingVertical="@dimen/dp_5"
            android:layout_margin="0dp"
            app:fontFamily="@font/opensans_regular_title" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textViewReferralCode"
            style="@style/appointment_booked"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:layout_margin="0dp"
            app:fontFamily="@font/opensans_regular_title"
            tools:text="7XCFAA" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textViewReferralAmount"
            style="@style/appointment_booked"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:layout_margin="0dp"
            android:paddingVertical="@dimen/dp_5"
            app:fontFamily="@font/opensans_regular_title"
            tools:text="@string/referral_amount_new" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/customTextViewText"
            style="@style/visitor_dashboard_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_5"
            android:text="@string/invite_friends_text_1"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:fontFamily="@font/opensans_regular" />


        <LinearLayout
            style="@style/button_next"
            android:layout_marginTop="0dp">


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonInviteFriends"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/drawable_button_white_shadow"
                android:text="@string/profile_invite_friends"
                android:textColor="@color/buttonColor" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutTermsConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatTextView
                style="@style/appointment_booked"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_7"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_3"
                android:text="@string/settings_terms_and_conditions"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11"
                app:fontFamily="@font/opensans_regular_title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/appoinment_booked_right_arrow"
                android:tint="@color/white" />
        </LinearLayout>


        <android.support.v7.widget.AppCompatTextView
            style="@style/visitor_dashboard_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:text="@string/invite_friends_share_your_link"
            android:visibility="gone"
            app:fontFamily="@font/opensans_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/drawable_edit_text"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/customTextViewServiceType"
                style="@style/become_a_local"
                android:layout_width="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="@dimen/dp_12"
                android:text="KOLC0015"
                android:textColor="@color/greyText"
                app:fontFamily="@font/opensans_regular"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@color/greyLine" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_7"
                    android:src="@drawable/referral_share" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>