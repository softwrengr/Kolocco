<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutTopSpace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayoutServiceProvider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewServiceProvider"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="top|center"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_4"
                android:scaleType="centerCrop"
                android:src="@drawable/user_round" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewServiceProviderMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_30"
                android:background="@drawable/drawable_edit_text_chat"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_13"
                android:paddingStart="@dimen/dp_13"
                android:paddingTop="@dimen/dp_10"
                android:text="Hii Capios sunt hibridas de albus lura.Fluctuis sunt cursuss de teres demolitione.Nunquam magicae gallus.Sunt exsules demitto festus, clemens turpises."
                android:textColor="@color/greyText"
                android:textSize="@dimen/sp_9"
                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutServiceUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewServiceUserMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@drawable/drawable_edit_text_chat"
                android:paddingBottom="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_13"
                android:paddingStart="@dimen/dp_13"
                android:paddingTop="@dimen/dp_10"
                android:text="Hi SA"
                android:textColor="@color/greyText"
                android:textSize="@dimen/sp_9"
                app:fontFamily="@font/opensans_regular" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewServiceUser"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="top|center"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_4"
            android:scaleType="centerCrop"
            android:src="@drawable/user_round" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dp_3"
        android:text="10:22 am"
        android:textColor="@color/greyLine"
        android:textSize="@dimen/sp_9"
        app:fontFamily="@font/opensans_regular" />


</LinearLayout>